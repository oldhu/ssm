<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to 'Reload', fabric_reload_path, :class => 'btn' %>
  </div>
</div>
<% if @message %>
  <div class="alert alert-info"><%= @message %></div>
<% end %>
<table class="table table-bordered" id="host-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Members</th>
      <th>Online</th>
    </tr>
  </thead>
  <% @zones.each do |zone| %>
  <tr>
    <td><%= zone.name %></td>
    <td>
      <% zone.zoneMembers.each do |member| %>
        <code><%= member.member %></code> <code><%= host_name_by_wwn(member.member) %></code><br/>
      <% end %>
    </td>
    <td>
      <% zone.zoneMembers.each do |member| %>
        <code><%= wwn_online_state(member.member) %></code><br/>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
